@model IEnumerable<dziennik_asp_mvc.Models.Entities.Subjects>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
